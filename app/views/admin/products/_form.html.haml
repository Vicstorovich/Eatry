.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
  .panel.panel-default
    = link_to 'Back', admin_products_path
    .panel-body
      %h3.thin.text-center New Product
      %hr/
      = simple_form_for [:admin, product] do |form|
        .top-margin
          = form.input :title
        .top-margin
          = form.input :description
        .top-margin
          = form.input :image
        .top-margin
          = form.input :price
        .top-margin
          %p Select categoru
          = form.collection_select :category_id, Category.all, :id, :title, prompt: true
        %hr/
        .row
          .col-lg-4
          .col-lg-4
          .col-lg-4.text-right
            = form.submit "Create new product.", class: "btn btn-primary"
