%header.navbar.navbar-inverse
  .container
    - if user_signed_in?
      %li= link_to "Log out", sessions_path, method: :delete
    - else
      %li= link_to "Log in", login_path
    %nav
      %ul.nav.navbar-nav.navbar-left
        - if user_signed_in?
          %li= link_to "Home", store_index_path
          %li= link_to "Edit profile",  edit_profiles_path
          %li= link_to "Registering your application",  signup_app_path
          %li
            - flash.each do |message_type, message|
              %div{:class => "alert alert-#{message_type}"}= message

    %nav
      - if user_signed_in?
        - if current_user.admin?
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'Products', admin_products_path
            %li= link_to 'Menu',  admin_menus_path
            %li= link_to 'Categories', admin_categories_path
            %li= link_to 'Orders', admin_orders_path
