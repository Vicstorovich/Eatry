%article.col-xs-12.maincontent
  %header.page-header
  .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    .panel.panel-default
      .panel-body
        %h3.thin.text-center Orders listing
        %table.table.table-sm
          %thead
            %tr
              %th Name
              %th Address
              %th Email
              %th{:colspan => "3"}
          %tbody
            - @orders.each do |order|
              %tr
                %td= order.name
                %td= order.address
                %td= order.email
                %td= link_to 'Show', order
                %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
