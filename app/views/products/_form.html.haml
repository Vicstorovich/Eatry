= simple_form_for(product, html: { class: 'form-inline' }) do |form|
  / = render 'shared/error_messages'
  / = render "shared/errors", resource: product
  .field
    = form.input :title
  .field
    = form.input :description
  .field
    = form.input :image
  .field
    = form.input :price
  .field
    = form.collection_select :category_id, Category.all, :id, :title, prompt: true
  .actions
    = form.submit
